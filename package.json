{
  "name": "ethers-helpers",
  "version": "1.0.0",
  "description": "Ethers helpers is a type-safe helper library for client to server needs using ethers.js",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon ./src/index.ts",
    "build": "tsc && tsc-alias",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "ethers",
    "ethereum",
    "helpers",
    "client",
    "server"
  ],
  "author": "CoopTRUE",
  "license": "MIT",
  "dependencies": {
    "@total-typescript/ts-reset": "^0.4.2",
    "ethers": "^6.6.0",
    "hotscript": "^1.0.12",
    "ts-toolbelt": "^9.6.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
