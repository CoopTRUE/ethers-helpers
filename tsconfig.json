{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "$lib/*": ["src/lib/*"]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "strictPropertyInitialization": false,
    "strict": true
  },
  "include": [".eslintrc.cjs", "src/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
